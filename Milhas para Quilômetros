from tkinter import *
from tkinter import ttk

root = Tk()
root.title("Milha para quilômetro")
def calcular(*args):
    try:
        valor = float(milha.get())#entrada
        resultado = float(1.609 * valor )#process
        quilometro.set(resultado)#saída
    except ValueError:
        pass

#criando a telinha legal
mainframe = ttk.Frame (root, padding = "3 3 12 12")
mainframe.grid(column= 0, row= 0, sticky=(N, W, E, S))
root.columnconfigure (0, weight= 1 )
root.rowconfigure (0, weight= 1)

milha = StringVar()

milha_entrada = ttk.Entry(mainframe, width=7, textvariable= milha)
milha_entrada.grid (column=2 , row = 1, sticky = (W, E))

quilometro = StringVar()
ttk.Label(mainframe, textvariable=quilometro).grid(column=2, row = 2, sticky=(W, E))

ttk.Button(mainframe, text="Calcular", command=calcular).grid(column=3, row= 3, sticky=W)

ttk.Label(mainframe, text='Milhas').grid(column= 3, row= 1, sticky= W)
ttk.Label(mainframe, text='É equivalente a').grid(column= 1, row= 2, sticky= E)
ttk.Label(mainframe, text='Quilômetros').grid(column= 3, row= 2, sticky= W)

for child in mainframe.winfo_children():
    child.grid_configure(padx=5, pady = 5)
milha_entrada.focus()
root.bind("<Return>", calcular)
root.mainloop()
